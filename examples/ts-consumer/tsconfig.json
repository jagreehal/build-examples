{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
